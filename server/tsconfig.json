{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],  // Ensure type definitions are located
    "types": ["node", "express", "bcryptjs", "jsonwebtoken"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
